<!-- views/components/form.ejs -->
<div class="container mx-auto p-6 bg-white rounded-lg shadow-lg mt-10">
    <h2 class="text-2xl font-bold text-center text-teal-700 mb-4">EV Battery Health Analysis</h2>
    <form action="/analyze" method="POST">
        <label for="makeModel" class="block text-gray-700 font-semibold">Vehicle Make and Model:</label>
        <input type="text" id="makeModel" name="makeModel" required class="w-full p-2 border border-gray-300 rounded mb-4">

        <label for="batteryAge" class="block text-gray-700 font-semibold">Battery Age (months/years):</label>
        <input type="number" id="batteryAge" name="batteryAge" required class="w-full p-2 border border-gray-300 rounded mb-4">

        <label for="chargePercent" class="block text-gray-700 font-semibold">Current Battery Charge Percentage:</label>
        <input type="number" id="chargePercent" name="chargePercent" required class="w-full p-2 border border-gray-300 rounded mb-4">

        <label for="chargeCycles" class="block text-gray-700 font-semibold">Number of Charge Cycles Completed:</label>
        <input type="number" id="chargeCycles" name="chargeCycles" required class="w-full p-2 border border-gray-300 rounded mb-4">

        <label for="batteryTemp" class="block text-gray-700 font-semibold">Battery Temperature (°C):</label>
        <input type="number" id="batteryTemp" name="batteryTemp" required class="w-full p-2 border border-gray-300 rounded mb-4">

        <label for="avgChargeTime" class="block text-gray-700 font-semibold">Average Charging Time (hrs):</label>
        <input type="number" id="avgChargeTime" name="avgChargeTime" required class="w-full p-2 border border-gray-300 rounded mb-4">

        <label for="tempRange" class="block text-gray-700 font-semibold">Ambient Driving Temperature Range (°C):</label>
        <input type="text" id="tempRange" name="tempRange" required class="w-full p-2 border border-gray-300 rounded mb-4">

        <label for="fastChargeFreq" class="block text-gray-700 font-semibold">Frequency of Fast Charging (times/week):</label>
        <input type="number" id="fastChargeFreq" name="fastChargeFreq" required class="w-full p-2 border border-gray-300 rounded mb-4">

        <button type="submit" class="w-full p-3 bg-teal-700 text-white rounded hover:bg-teal-600">Analyze</button>
    </form>
</div>
